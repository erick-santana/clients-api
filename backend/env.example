# Configurações da Aplicação
NODE_ENV=development
PORT=8080
LOG_LEVEL=debug

# Banco de Dados SQLite (Desenvolvimento Local)
DATABASE_PATH=./database/clientes.db

# Banco de Dados MySQL (Desenvolvimento Local)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=clientes_dev
MYSQL_USER=clientes_user
MYSQL_PASSWORD=clientes_password

# AWS RDS (Produção)
RDS_HOSTNAME=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=3306
RDS_DB_NAME=clientes_prod
RDS_USERNAME=your_rds_username
RDS_PASSWORD=your_rds_password

# AWS Credentials (Produção)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Security Services (Produção)
AWS_KMS_KEY_ID=your_kms_key_id
AWS_COGNITO_USER_POOL_ID=your_cognito_user_pool_id
AWS_COGNITO_CLIENT_ID=your_cognito_client_id
AWS_COGNITO_IDENTITY_POOL_ID=your_cognito_identity_pool_id
AWS_SECRETS_MANAGER_SECRET_NAME=clientes/db-credentials

# AWS Network & Security (Produção)
AWS_VPC_ID=your_vpc_id
AWS_SUBNET_IDS=subnet-12345678,subnet-87654321
AWS_SECURITY_GROUP_IDS=sg-12345678
AWS_WAF_WEB_ACL_ID=your_waf_web_acl_id

# AWS Monitoring & Logging (Produção)
AWS_CLOUDWATCH_LOG_GROUP=/ecs/clientes
AWS_CLOUDTRAIL_LOG_GROUP=CloudTrail/DefaultLogGroup
AWS_GUARDDUTY_DETECTOR_ID=your_guardduty_detector_id

# Redis/ElastiCache (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Segurança
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Criptografia
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true
